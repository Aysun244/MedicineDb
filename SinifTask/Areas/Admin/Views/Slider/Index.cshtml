@model IEnumerable<SinifTask.ViewModel.Slider.SliderGetVM>

@{
    ViewData["Title"] = "Index";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">


            <a class="btn btn-success m-4" asp-action="Create" asp-controller="Slider">Create</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var slider in Model)
                    {

                        <tr>
                            <th scope="row">@slider.Id</th>
                            <td><img src="~/assets/images/website-images/@slider.ImageUrl" width="100" height="100" alt="Alternate Text" /></td>
                            <td>@slider.Title</td>
                            <td>@slider.Description</td>
                            <td>
                                <a class="btn btn-warning" asp-action="Update" asp-controller="Slider" asp-route-id="@slider.Id">Update</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="@slider.Id">Delete</a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </main>
</div>